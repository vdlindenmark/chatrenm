<%= form_for :message do |f| %>
	<p>
		<%= f.label :name %><br>
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :text %><br>
		<%= f.text_area :text %>
	</p>

	<p>
		<%= f.submit "Stuur naar Olga" %>
	</p>
<% end %>
<hr/>
<h1>DIT IS EEN LIJN</h1>
<% @messages.each do |message| %> 
<div class="message"> 
	<p class="name"><%= message.name %></p>
  <p class="content"><%= message.text %></p> 
  <p class="time"><%= message.created_at %></p> 
</div> 
<% end %>
